<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".authontication.CreateAccountActivity">
    <ProgressBar
        android:id="@+id/createprogress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/acct_login_form">

        <ImageView
            android:id="@+id/getstaimg"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/white"
            android:src="@drawable/register" />

        <TextView
            android:id="@+id/logintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Create Account"
            android:textSize="34sp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userptext"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="Enter username"
            android:inputType="textPersonName"
            android:maxLines="1" />

        <AutoCompleteTextView
            android:id="@+id/emailacctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordacctext"
            android:layout_marginTop="16dp"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:maxLines="1" />

        <Button
            android:id="@+id/regpbtn"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="85dp"
            android:text="Register"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>